{
  "env": {
    "browser": true,
    "es2020": true,
    "mocha": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": "off",
    "consistent-return": "off",
    "global-require": "off",
    "import/no-dynamic-require": "off",
    "max-classes-per-file": "off",
    "no-param-reassign": "off"
  }
}
